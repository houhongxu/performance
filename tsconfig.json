{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "es6",
    "target": "es2018",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": false,
  }
}
